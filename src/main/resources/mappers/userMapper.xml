<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quickflash.comment.mapper.CommentMapper">
    <select id="selectIdToUserNameMapByIdSet" resultType="map">
        SELECT
        id AS key,
        name AS value
        FROM
        user
        WHERE
        id IN
        <foreach item="id" collection="idSet" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>



</mapper>

