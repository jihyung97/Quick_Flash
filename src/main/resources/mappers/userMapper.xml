<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quickflash.user.mapper.UserMapper">
    <select id="selectIdToUserNameMapByIdSet"
            parameterType="java.util.Set"
            resultType="com.quickflash.user.dto.UserIdToNameDto" >
        SELECT  `id`,`name`
        FROM `user`
        WHERE `id` IN
        <foreach item="id" collection="idSet" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectUserIdsForBatch"  parameterType = "map" resultType="int" >
        SELECT `id`
        FROM `user`
        ORDER BY `id`
        LIMIT #{offset}, #{limit}
    </select>



</mapper>

