<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quickflash.comment.mapper.CommentMapper">

    <select id="selectCommentDtoListByPostId" resultType="com.quickflash.comment.dto.CommentDto">
        SELECT
          `id`,
          `postId`,
          `userId`,
          `content`,
          `isBeforeMeeting`
        FROM `comment`
        WHERE postId = #{postId}
    </select>

</mapper>