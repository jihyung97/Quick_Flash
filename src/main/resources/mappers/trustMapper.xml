<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quickflash.trust.mapper.TrustMapper">
    <update id="updateTrustOfMemberByBatch"
    parameterType="map"
    >
        UPDATE `trust`
        SET `trustOfMember` = CASE `userId`
        <foreach collection="trustOfMemberMap" item="trustOfMember" index="userId">
            WHEN #{userId} THEN #{trustOfMember}
        </foreach>
        END
        WHERE `userId` IN
        <foreach collection="trustOfMemberMap.keySet()" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </update>




</mapper>

